<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/back1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/chalk"/>

    <ImageView
        android:id="@+id/classroom"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/classroom2" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/padding1"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classroom"
        android:layout_toRightOf="@+id/map"
        android:fontFamily="@font/eraserdust"
        android:paddingLeft="@dimen/padding1"
        android:text="@string/line1"
        android:textColor="@color/color"
        android:textSize="40sp"
        android:autoLink="map"/>


    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:fontFamily="@font/eraserdust"
        android:paddingLeft="72dp"
        android:paddingRight="@dimen/padding1"
        android:text="@string/line2"
        android:textColor="@color/color"
        android:textSize="40sp"
        android:autoLink="map"/>

    <ImageView
        android:id="@+id/phone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:paddingLeft="@dimen/padding1"
        android:paddingTop="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_name"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_toRightOf="@id/phone1"
        android:fontFamily="@font/eraserdust"
        android:paddingLeft="@dimen/padding1"
        android:paddingTop="30dp"
        android:text="@string/number"
        android:textColor="@color/color"
        android:textSize="40sp"
        android:autoLink="phone"
        android:textColorLink="#FFFFFF"
        />

    <ImageView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone1"
        android:paddingLeft="@dimen/padding1"
        android:paddingTop="50dp"
        android:src="@drawable/link"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_toRightOf="@id/link"
        android:fontFamily="@font/eraserdust"
        android:paddingLeft="@dimen/padding1"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/padding1"
        android:text="@string/website"
        android:textColor="@color/color"
        android:textSize="40sp"
        android:textColorLink="#FFFFFF"
        android:autoLink="web"

        />

</RelativeLayout>



